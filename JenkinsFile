    }

    stages {
        stage('Build') {
            steps {
                echo 'Build artifact'
                echo 'compile the code and generate any necessary artifacts'
                echo 'specifying who knows what for the code'
            }
        }
    
        stage('Tests') {
            steps {
                echo 'Unit tests..'
                echo 'Jenkins is configured to run automated tests on the code'
            }
        }

    stage('Code Quality Analysis') {
            steps {
                echo 'Jenkins is configured to run automated tests on the code'
                echo 'Selenium could be used, but other tools are our own CodeSnuffer.zsh'
            }
        }
     
    stage('Deploy') {
            steps {
                echo 'Configure Jenkins to deploy application to test environment'
                echo 'This will be done with a tool called ProgramElevate.zsh'
            }
        }

    stage('Release') {
            steps {
                echo 'Jenkins is used to deploy to production environment.  This is going to be after we uncompress the file.'
            }
        }
    }
}
